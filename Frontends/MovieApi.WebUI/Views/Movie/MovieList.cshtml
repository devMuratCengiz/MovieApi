@model List<ResultMovieDto>
@{
    ViewData["Title"] = "MovieList";
    Layout = "~/Views/UILayout/LayoutUI.cshtml";
}

<div class="page-single movie_list">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="topbar-filter">
					<p>Toplam <span>1,608 film</span> mevcut</p>
					<label>Sırala:</label>
					<select>
						<option value="popularity">Popüler Filmler A-Z</option>
						<option value="popularity">Popüler Filmler Z-A</option>
						<option value="rating">Puana Göre Artan</option>
						<option value="rating">Puana Göre Azalan</option>
						<option value="date">Yayınlanma Tarihi</option>
					</select>
					<a href="movielist.html" class="list"><i class="ion-ios-list-outline active"></i></a>
					<a href="moviegrid.html" class="grid"><i class="ion-grid"></i></a>
				</div>
				@foreach (var item in Model)
				{

					<div class="movie-item-style-2">
						<img src="@item.CoverImageUrl" alt="">
						<div class="mv-item-infor">
							<h6><a href="moviesingle.html">@item.Title <span>(@item.CreatedYear)</span></a></h6>
							<p class="rate"><i class="ion-android-star"></i><span>@item.Rating</span> /10</p>
							<p class="describe">@item.Description</p>
							<p class="run-time"> Süre: @item.Duration dk    .     <span>Yayın Tarihi: @item.ReleaseDate.ToString("dd MMM yyyy")</span></p>
							<p>Yönetmen: <a href="#">Joss Whedon</a></p>
							<p>Oyuncular: <a href="#">Robert Downey Jr.,</a> <a href="#">Chris Evans,</a> <a href="#">  Chris Hemsworth</a></p>
						</div>
					</div>
				}
				
				<div class="topbar-filter">
					<label>Sayfadaki film sayısı:</label>
					<select>
						<option value="range">5 Film</option>
						<option value="saab">10 Film</option>
					</select>
					<div class="pagination2">
						<span>Sayfa 1-2:</span>
						<a class="active" href="#">1</a>
						<a href="#">2</a>
						<a href="#"><i class="ion-arrow-right-b"></i></a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-12 col-xs-12">
				<div class="sidebar">
					<div class="searh-form">
						<h4 class="sb-title">Film Ara</h4>
						<form class="form-style-1" action="#">
							<div class="row">
								<div class="col-md-12 form-it">
									<label>Film Adı</label>
									<input type="text" placeholder="Aramak istediğiniz kelimeyi giriniz..">
								</div>
								<div class="col-md-12 form-it">
									<label>Tür</label>
									<div class="group-ip">
										<select name="skills" multiple="" class="ui fluid dropdown">
											<option value="">Türü Seçiniz</option>
											<option value="Action1">Aksiyon</option>
											<option value="Action2">Macera</option>
											<option value="Action3">Korku</option>
											<option value="Action4">Komedi</option>
										</select>
									</div>

								</div>
								<div class="col-md-12 form-it">
									<label>Puan</label>

									<select>
										<option value="range">-- Puanı Seçiniz --</option>
										<option value="saab">-- 8 ve üzeri --</option>
										<option value="saab">-- 7-8 --</option>
										<option value="saab">-- 7'den düşük --</option>
									</select>

								</div>
								<div class="col-md-12 form-it">
									<label>Yayınlanma Tarihi</label>
									<div class="row">
										<div class="col-md-6">
											<select>
												<option value="range">Yıl</option>
												<option value="number">2000</option>
												<option value="number">2010</option>
												<option value="number">2020</option>
											</select>
										</div>
										<div class="col-md-6">
											<select>
												<option value="range">Yıl</option>
												<option value="number">2000</option>
												<option value="number">2010</option>
												<option value="number">2020</option>
											</select>
										</div>
									</div>
								</div>
								<div class="col-md-12 ">
									<input class="submit" type="submit" value="Ara">
								</div>
							</div>
						</form>
					</div>
					<div class="ads">
						<img src="/Film-Review-Movie-Database/images/uploads/ads1.png" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

